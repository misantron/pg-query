{
  "name": "misantron/pg-query",
  "description": "Powerful PostgreSQL query builder",
  "keywords": [
    "php",
    "pdo",
    "postgres",
    "query-builder"
  ],
  "homepage": "https://github.com/misantron/pg-query",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=7.1",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "~7.4",
    "squizlabs/php_codesniffer": "~3.3",
    "friendsofphp/php-cs-fixer": "~2.10"
  },
  "autoload": {
    "psr-4": {
      "Misantron\\QueryBuilder\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Misantron\\QueryBuilder\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "unit-tests": "phpunit --testsuite Unit --verbose",
    "phpcs": "phpcs --standard=PSR2 src",
    "phpcs-fix": "php-cs-fixer fix --config=.php_cs -v --diff"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}