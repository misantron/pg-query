{
  "name": "misantron/pg-query",
  "description": "Powerful PostgreSQL query builder",
  "keywords": [
    "php",
    "pdo",
    "postgres",
    "query-builder"
  ],
  "homepage": "https://github.com/misantron/pg-query",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=7.2",
    "ext-pdo": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16",
    "phpunit/phpunit": "^8.5|^9.4",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "Misantron\\QueryBuilder\\": "src/"
    },
    "files": [
      "functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Misantron\\QueryBuilder\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "unit-tests": "phpunit --testsuite Unit --verbose",
    "phpcs": "phpcs --standard=PSR12 src",
    "phpcs-fix": "php-cs-fixer fix --config=.php_cs -v --diff"
  },
  "config": {
    "sort-packages": true
  },
  "prefer-stable": true
}
